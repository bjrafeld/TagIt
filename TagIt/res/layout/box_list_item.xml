<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView android:layout_width="100dp"
               android:layout_height="100dp"
               android:id="@+id/contents_image"
               android:layout_margin="10dp"/>
    <!--<ImageView android:layout_width="100dp"-->
               <!--android:layout_height="100dp"-->
               <!--android:id="@+id/tag_image"-->
               <!--android:layout_marginLeft="0dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp"-->
               <!--android:layout_marginBottom="10dp"/>-->
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent" android:layout_margin="10dp"
                  android:gravity="center_vertical|left">
        <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/location_text" android:textSize="18dp"/>
        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/contents_text" android:textSize="18dp"/>
    </LinearLayout>

</LinearLayout>